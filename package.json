{
  "name": "radioflow-desktop",
  "private": false,
  "version": "1.0.0",
  "description": "A modern, high-fidelity internet radio player built with Electron, React, and TypeScript. Features a hybrid caching audio engine for seamless playback.",
  "author": "Detailed Developer <dev@example.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/radioflow.git"
  },
  "keywords": [
    "electron",
    "radio",
    "music",
    "streaming",
    "react",
    "typescript",
    "audio-player"
  ],
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "set ELECTRON_RUN_AS_NODE=&& vite",
    "build": "set ELECTRON_RUN_AS_NODE=&& tsc -b && vite build",
    "lint": "eslint .",
    "preview": "set ELECTRON_RUN_AS_NODE=&& vite preview",
    "dist": "npm run build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder"
  },
  "build": {
    "appId": "com.radioflow.desktop",
    "productName": "RadioFlow",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "RadioFlow",
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@tailwindcss/vite": "^4.1.18",
    "@types/howler": "^2.2.12",
    "axios": "^1.13.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.2",
    "howler": "^2.2.4",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "electron": "^33.0.2",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}